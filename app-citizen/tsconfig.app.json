{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": { "tslib": ["node_modules/tslib"] },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDirs": ["src",
      "../server/src/common"
    ],
    "allowSyntheticDefaultImports": true
  },
  "files": [
    "src/main.ts",
    "src/main.en.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
