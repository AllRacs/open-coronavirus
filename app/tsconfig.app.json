{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": { "tslib": ["node_modules/tslib"] },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDirs": ["src",
      "../server/src/common"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
